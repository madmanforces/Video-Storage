extends base.pug

block content
    h4 게시물 업데이트
    form(method="POST")
        input(name="title", placeholder="제목", value=video.title, required)
        input(placeholder="설명", required, type="text", name="description", minlength=20, value=video.description)
        input(placeholder="해쉬태그에(,)를 사용하여 나눠주십시오", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="확인",type="submit")