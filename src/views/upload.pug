extends base.pug

block content
     div.upload__container
         div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
         if errorMessage 
            span=errorMessage
         form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="제목", required, type="text", name="title", )
            input(placeholder="설명", required, type="text", name="description", )
            input(placeholder="해쉬태그, 쉼표를 사용하여 나눠주세요.", required, type="text", name="hashtags")
            input(type="submit", value="Upload Video")


         block scripts
            script(src="/static/js/recorder.js")
              